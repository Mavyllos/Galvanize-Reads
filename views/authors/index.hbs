<div class="container">
  <div class="row">
    <div class="col-md-12">
      <br>
      <h1>Skill Up!</h1>
      <p><hr></p>
      <br>
    </div>
    <div class="row">
      <div class="col-md-6">
        <a href="/books">
          <img src="http://placehold.it/500x100/42f498?text=Books" alt="Books">
        </a>
      </div>
      <div class="col-md-6">
        <a href="/authors">
          <img src="http://placehold.it/500x100/40ede7?text=Authors" alt="Authors">
        </a>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <div><h3>Total Authors</h3></div>

      </div>
      <div class="col-md-10">
        {{#each authors}}
        <br>
        <br>
          <div class="authors" value="{{this.last_name}}">
            <div class="row">
            <div class="col-md-2">
              <a href="/authors/{{this.id}}">
              <img src="{{this.portrait_url}}" width="125" height="150" class="author_img" />
            </a>
            </div>
            <div class="col-md-8">
              <div><h3><a href="/authors/{{this.id}}">{{this.first_name}} {{this.last_name}}</a></h3></div>
              <div class="biography">{{this.biography}}</div>
              <br>
              <div class="bibliography">
                <p><b>Books:</b></p>
                <ol>
                {{#each this.book_id}}
                <li>{{this.title}}</li>
                {{/each}}
                </ol>
              </div>
            </div>
              <div class="col-md-2">
                <br><br>
                <a href="/authors/{{this.id}}/edit" class="btn btn-sm btn-primary">Edit {{author.first_name}} {{author.last_name}}</a>
                <br><br>
                <form action="/authors/{{ this.id }}?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
                <br>
                <br>
            </div>
          </div>
          <br>
        {{/each}}
      </div>
    </div>
  </div>
</div>
